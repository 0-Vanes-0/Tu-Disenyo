<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/profileRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="18dp"
        android:paddingEnd="20dp"
        android:paddingBottom="96dp">

        <!-- Top row: title + settings icon -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMyProfileTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSettings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnSettings"
                android:layout_marginEnd="12dp"/>

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/cog"
                app:tint="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Profile card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="18dp"
                android:paddingTop="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="18dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Jordan Designer"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fashion Enthusiast"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <Button
                    android:id="@+id/btnEditProfile"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Edit Profile"
                    app:icon="@drawable/pencil"
                    app:iconPadding="10dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats row -->
        <LinearLayout
            android:id="@+id/rowStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDesigns"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDesignsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"/>

                    <TextView
                        android:id="@+id/tvDesignsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Designs"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardLikes"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLikesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="156"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/pink"/>

                    <TextView
                        android:id="@+id/tvLikesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Likes"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSold"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSoldValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"/>

                    <TextView
                        android:id="@+id/tvSoldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Sold"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Recent Activity -->
        <TextView
            android:id="@+id/tvRecentActivityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Recent Activity"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Item 1 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/recentItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/recentIconCard1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/light_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/recentIcon1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="9dp"
                            android:src="@drawable/hearts"
                            app:tint="@color/blue"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/recentTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Summer Vibes T-Shirt"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/recentIconCard1"
                        app:layout_constraintTop_toTopOf="@id/recentIconCard1"
                        app:layout_constraintEnd_toStartOf="@id/recentTime1"/>

                    <TextView
                        android:id="@+id/recentSubtitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:text="12 new likes"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/recentIconCard1"
                        app:layout_constraintTop_toBottomOf="@id/recentTitle1"
                        app:layout_constraintEnd_toStartOf="@id/recentTime1"/>

                    <TextView
                        android:id="@+id/recentTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h ago"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/recentTitle1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Item 2 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/recentItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="6dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/recentIconCard2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/light_green"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/recentIcon2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="9dp"
                            android:src="@drawable/share"
                            app:tint="@color/green"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/recentTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Urban Hoodie Design"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/recentIconCard2"
                        app:layout_constraintTop_toTopOf="@id/recentIconCard2"
                        app:layout_constraintEnd_toStartOf="@id/recentTime2"/>

                    <TextView
                        android:id="@+id/recentSubtitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:text="Shared on social"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/recentIconCard2"
                        app:layout_constraintTop_toBottomOf="@id/recentTitle2"
                        app:layout_constraintEnd_toStartOf="@id/recentTime2"/>

                    <TextView
                        android:id="@+id/recentTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5h ago"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/recentTitle2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Item 3 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/recentItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="6dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/recentIconCard3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/light_purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/recentIcon3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="9dp"
                            android:src="@drawable/pencil"
                            app:tint="@color/purple"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/recentTitle3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Minimal Tee Collection"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/recentIconCard3"
                        app:layout_constraintTop_toTopOf="@id/recentIconCard3"
                        app:layout_constraintEnd_toStartOf="@id/recentTime3"/>

                    <TextView
                        android:id="@+id/recentSubtitle3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="2dp"
                        android:text="Design updated"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/recentIconCard3"
                        app:layout_constraintTop_toBottomOf="@id/recentTitle3"
                        app:layout_constraintEnd_toStartOf="@id/recentTime3"/>

                    <TextView
                        android:id="@+id/recentTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1d ago"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/recentTitle3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Settings header (content not visible in screenshot; header included) -->
        <TextView
            android:id="@+id/tvSettingsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Settings"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textStyle="bold"/>

        <!-- Spacer so content doesn't collide with bottom navigation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>